@model IEnumerable<AjaxExample.Models.Calisan>
@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <h3 style="text-align:center"> Calisan Listesi</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Isim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) { 
            <tr>
                <td>@item.calisanID</td>
                <td><a href="#" data-toggle="popover" data-trigger="hover" id="@item.calisanID">@item.isim</a></td>                
            </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            title: setData,
            html: true,
            placement:'right'
        });
        function setData(id) {
            var set_data = '';
            var element = $(this);
            var id = element.attr("id");
            $.ajax({
                url:"/Home/EmployeeInfo?id" +id,
                method : "post",
                async: false,
                data: { id: id },
                success: function(data){
                    set_data = data
            }
                           
            }); return set_data
        }
    });
</script>
